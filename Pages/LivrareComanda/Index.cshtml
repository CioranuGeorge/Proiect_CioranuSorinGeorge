@page
@model Proiect_CioranuSorinGeorge.Pages.LivrareComanda.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Transport gratuit la comenzi de peste 150 lei</h1>

<p>
    <a asp-page="Create">Adauga Livrare</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Livrare[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livrare[0].Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livrare[0].NumarContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livrare[0].NumarComanda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Livrare) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumarContact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumarComanda)
                </td>
                
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
